<body>

<jsp:include page="navbar.jsp"/>

<div class="container">
    <div class="card">
        <div class="header-row">
            <div>
                <div class="owner-name">
                    Welcome, <span>${ownerUserName}</span>
                </div>
                <div class="subheading">Your published apps</div>
            </div>

            <form action="${pageContext.request.contextPath}/owners-ui/add-app" method="get">
                <button type="submit" class="btn-primary">+ Add New App</button>
            </form>
        </div>

        <table class="apps-table" id="appsTable">
            <thead>
            <tr>
                <th>ID</th>
                <th>App Name</th>
                <th>Type</th>
                <th>Genre</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody id="appsTableBody">
            <tr>
                <td colspan="5" class="empty-state">Loading apps...</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    (function() {
        const ownerUserName = '${ownerUserName}';
        const ctx = '${pageContext.request.contextPath}';
        const tbody = document.getElementById('appsTableBody');

        // Frontend -> frontend controller -> backend
        fetch(ctx + '/owners-ui/apps?userName=' + encodeURIComponent(ownerUserName))
            .then(resp => {
                if (!resp.ok) {
                    throw new Error('Failed to load apps for owner');
                }
                return resp.json();
            })
            .then(data => {
                tbody.innerHTML = '';

                if (!data || data.length === 0) {
                    tbody.innerHTML =
                        '<tr><td colspan="5" class="empty-state">No apps published yet.</td></tr>';
                    return;
                }

                // data: [{id, name, type, genre}, ...]
                data.forEach(function(app) {
                    const tr = document.createElement('tr');

                    tr.innerHTML = `
                        <td>${app.id}</td>
                        <td>${app.name}</td>
                        <td><span class="tag">${app.type || '-'}</span></td>
                        <td>${app.genre || '-'}</td>
                        <td><span class="status-pill status-active">ACTIVE</span></td>
                    `;

                    tbody.appendChild(tr);
                });
            })
            .catch(err => {
                console.error(err);
                tbody.innerHTML =
                    '<tr><td colspan="5" class="empty-state">Error loading apps.</td></tr>';
            });
    })();
</script>

</body>
